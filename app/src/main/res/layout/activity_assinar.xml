<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    tools:context=".activities.AssinarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/assine_aqui"
        android:textColor="@color/ourGold"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/ourGold" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/ourGold">

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0.5dp"
            android:layout_marginEnd="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="@string/limparhint"
            android:textColor="@color/ourGold"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/getsign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0.5dp"
            android:layout_marginEnd="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="@string/salvarhint"
            android:textColor="@color/ourGold"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/ourGold" />

    <LinearLayout
        android:id="@+id/canvasLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3sp"
        android:background="@color/CanvasBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAtendenteAss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="atendente aqui"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtDataAss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="data aqui"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
