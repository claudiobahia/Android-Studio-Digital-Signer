<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NovaAssinaturaActivity">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:padding="10sp"
            android:text="@string/descricaoNovaAssinatura"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:padding="10sp"
            android:text="@string/nome_do_atendente" />

        <EditText
            android:id="@+id/edtNomeAtendente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nome_do_atendenteHINT"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:padding="10sp"
            android:text="@string/nome_da_outra_parte" />

        <EditText
            android:id="@+id/edtNomeOutro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nome_da_outra_parteHINT"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:padding="10sp"
            android:text="@string/descri_o_do_assunto" />

        <EditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/descricaoHINT"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:minLines="2"
            android:padding="10sp" />

        <Button
            android:id="@+id/btnCriarAssinatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assinar" />
</LinearLayout>